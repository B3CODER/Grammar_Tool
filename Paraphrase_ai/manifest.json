{
  "manifest_version": 3,
  "name": "Rephrase AI",
  "version": "1.0",
  "description": "A grammar checking and text improvement tool",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mini Grammarly"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}